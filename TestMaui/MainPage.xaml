<?xml version="1.0" encoding="utf-8" ?>
<testmaui:BaseContentPage
	x:Class="TestMaui.MainPage"
	xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
	xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
	xmlns:testmaui="clr-namespace:TestMaui"
	Style="{DynamicResource ContentPage}">
    <ScrollView>
        <VerticalStackLayout
			Padding="30,0"
			Spacing="25"
			VerticalOptions="Center">

            <Image
				x:Name="TheImage"
				HorizontalOptions="Center"
				SemanticProperties.Description="Cute dot net bot waving hi to you!"
				Source="dotnet_bot.png" />

            <Label
				FontSize="32"
				x:Name="Heading1"
				HorizontalOptions="Center"
				SemanticProperties.HeadingLevel="Level1"
				Style="{DynamicResource LabelHeader}"
				Text="Hello, World!" />

            <Label
				FontSize="18"
				x:Name="Heading2"
				HorizontalOptions="Center"
				SemanticProperties.Description="Welcome to dot net Multi platform App U I"
				SemanticProperties.HeadingLevel="Level2"
				Text="Welcome to .NET Multi-platform App UI" />

            <testmaui:SizeLinkedImage
				HorizontalOptions="Center"
				HeightTarget="{Binding ., Source={x:Reference Name=Heading1}}"
				Source="dotnet_bot.png" />

            <Button
				x:Name="CounterBtn"
				Clicked="OnCounterClicked"
				HorizontalOptions="Center"
				SemanticProperties.Hint="Counts the number of times you click"
				Text="Click me" />
        </VerticalStackLayout>
    </ScrollView>
</testmaui:BaseContentPage>

